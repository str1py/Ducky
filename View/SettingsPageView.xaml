                    </Grid>
                </Border>
                <Grid.InputBindings>
                    <MouseBinding Gesture="LeftDoubleClick"                                           
                                  Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext.ListViewDoubleClick}"/>
