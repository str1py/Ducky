                        <Label  Grid.Column="0" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="29" 
                            Style="{DynamicResource DiscriptionLabel}" Margin="0,0,0,10">
                            Add,remove,change your music folders. On/off music search.
                        </Label>
                        <!--Папки с музыкой-->
                        <Label Grid.Column="1" Grid.Row="4" Grid.RowSpan="2" Grid.ColumnSpan="8" VerticalAlignment="Center" Style="{DynamicResource SettingsLabelStyle}" >Music folders</Label>
                        <Button Grid.Column="2" Grid.Row="6" Grid.ColumnSpan="3" Grid.RowSpan="1"  
                            Style="{DynamicResource SettingsButtonStyle}" Command="{Binding AddFolderCommand}">Add</Button>
                        <Button Grid.Column="6" Grid.Row="6" Grid.ColumnSpan="3" Grid.RowSpan="1"
                            Style="{DynamicResource SettingsButtonStyle}" IsEnabled="{Binding DelEnable}"
                            Command="{Binding DelFolderCommand}">Remove</Button>
                        <ListView Grid.Row="7" Grid.ColumnSpan="20" Grid.RowSpan="6" Grid.Column="2" 
                              ItemsSource="{Binding Folders}" FontFamily="{StaticResource BaseFont}" 
                              Background="Transparent" Foreground="White"
                              BorderThickness="1" BorderBrush="{DynamicResource ThirdColorBrush}" 
                              SelectedIndex="{Binding FolderSelectedIndex}"></ListView>

                        <!--Поиск по площадкам-->
