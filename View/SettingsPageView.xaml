                                <Label VerticalContentAlignment="Center" VerticalAlignment="Top"
                                   Style="{DynamicResource SettingsLabelStyle}" FontSize="{StaticResource Small}"
                                   >Enable video search</Label>
                                <Label Foreground="Red" VerticalContentAlignment="Center"
                                   VerticalAlignment="Top" Style="{DynamicResource SettingsLabelStyle}" 
                                   FontSize="{StaticResource Small}">YouTube</Label>
                            </StackPanel>

