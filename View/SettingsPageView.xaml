                            <CheckBox Style="{DynamicResource OrangeSwitchStyle}" VerticalAlignment="Center"
                                  IsChecked="{Binding SoundAlertsIsChecked}" Margin="0,5,0,0"
                                  HorizontalAlignment="Right" ></CheckBox>
