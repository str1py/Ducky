                               Visibility="{Binding IsSelectedVisibility}" 
                               FontSize="{StaticResource Big}" Foreground="{DynamicResource SecondColorBrush}" 
                               VerticalAlignment="Center">✓</Label>
                        <fa:ImageAwesome Icon="Spinner" Spin="True" Grid.Row="0" Grid.RowSpan="3" Grid.Column="0" Foreground="{DynamicResource SecondColorBrush}" Visibility="{Binding IsConnectingVisibility}" ></fa:ImageAwesome>
                        <Label Grid.Column="1" Grid.Row="1"  Grid.ColumnSpan="2" FontFamily="{StaticResource BaseFont}" FontSize="{StaticResource Small}" Foreground="White" Content="{Binding ProxyType}"></Label>
