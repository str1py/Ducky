                                Grid.Row="15" Grid.Column="2" Grid.ColumnSpan="12" Grid.RowSpan="10" >
                            <StackPanel Orientation="Horizontal">
                                <CheckBox IsChecked="{Binding IsYoutube}" VerticalAlignment="Center" 
